@using System.Data
@{
    ViewData["Title"] = "Country List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<CountryModel>

<main id="main" class="main">
    <div class="pagetitle">
        <h1>City</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Country" asp-action="CountryListPage">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">City List</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-end align-items-center">
            <a class="btn btn-outline-primary" asp-controller="Country" asp-action="CountryAddEdit">
                <i class="bi bi-plus-lg"></i>&nbsp;Add Country
            </a>
        </div>
    </div><!-- End Page Title -->
    @if (TempData["CountryInsertMsg"] != null)
    {
        <div class="alert alert-success">
            @TempData["CountryInsertMsg"]
        </div>
    }

    <div class="mb-3">
        <input type="text" class="form-control" id="citySearch" placeholder="Search Any">
    </div>

    <table class="table table-hover table-header-fixed">
        <thead>
            <tr>
                <th scope="col">Country Name</th>
                <th scope="col">Country Code</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody id="countryTable">
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.CountryName</td>
                    <td>@i.CountryCode</td>
                    <td class="text-center">
                        <a class="btn btn-outline-success btn-xs" asp-controller="Country" asp-action="CountryAddEdit">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a class="btn btn-outline-danger btn-xs delete-city" asp-controller="Country" asp-action="DeleteCountry">
                            <i class="bi bi-x"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).on('click', '.delete-city', function (e) {
            e.preventDefault(); // Prevent the default action

            var deleteUrl = $(this).attr('href'); // Get the URL from the link

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = deleteUrl; // Redirect to delete URL
                }
            });
        });
    </script>
}

