@model Nice_Admin_Backened.Models.CountryModel


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Form Elements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Elements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Country Add/Edit Form</h5>
                        <form asp-controller="Country" asp-action="CountrySave">
                            <input type="hidden" asp-for="CountryID" />
                            <div class="mb-3 row">
                                <label for="inputCountryName" class="col-sm-3 col-form-label">CountryName</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="CountryName" class="form-control" id="inputCountryName" placeholder="Enter CountryName">
                                    <span asp-validation-for="CountryName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="inputCountryCode" class="col-sm-3 col-form-label">CountryCode</label>
                                <div class="col-sm-9">
                                    <input type="text" asp-for="CountryCode" class="form-control" id="inputCountryCode" placeholder="Enter CountryCode">
                                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form>


                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
