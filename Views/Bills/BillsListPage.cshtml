@using System.Data
@model System.Data.DataTable

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Product</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a>Order List</a>
                </li>
            </ol>
        </nav>
        <div class="d-flex justify-content-end align-items-center">
            <div>
                <a class="btn btn-outline-primary" asp-controller="Bills" asp-action="BillAddEditForm"><i class="bi bi-plus-lg"></i>&nbsp;Add Bill</a>
            </div>
        </div>
    </div><!-- End Page Title -->

    <table class="table table-hover table-header-fixed">
        <thead>
            <tr>
                <th scope="col">BillID</th>
                <th scope="col">BillNumber</th>
                <th class="col">BillDate</th>
                <th class="col">TotalAmount</th>
                <th class="col">Discount</th>
                <th class="col">NetAmount</th>
                <th class="text-center">OrderId</th>
                <th class="text-center">UserID</th>
            </tr>
        </thead>
        <tbody id="sample_2">
            <span class="text-danger">@TempData["ErrorMessage"]</span>
            @foreach (DataRow dataRow in Model.Rows)
            {
                <tr>
                    <td>@dataRow["BillID"]</td>
                    <td>@dataRow["BillNumber"]</td>
                    <td>@dataRow["BillDate"]</td>
                    <td>@dataRow["TotalAmount"]</td>
                    <td>@dataRow["Discount"]</td>
                    <td>@dataRow["NetAmount"]</td>
                    <td>@dataRow["OrderID"]</td>
                    <td>@dataRow["UserID"]</td>
                    <td class="text-center">
                        <a class="btn btn-outline-success btn-xs" asp-controller="Bills" asp-action="BillAddEditForm" asp-route-BillID="@dataRow["BillID"]">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                        <a asp-controller="Bills" asp-action="BillDelete" asp-route-BillID="@dataRow["BillID"]" class="btn btn-outline-danger btn-xs">
                            <i class="bi bi-x"></i>
                        </a>
                    </td>   
                </tr>
            }
        </tbody>
    </table>
</main>